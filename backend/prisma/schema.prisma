generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  email    String   @unique
  password     String

}


model Course {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name    String   @unique
  fees     Int
  description String   
  students   Student[]  
}

model Student {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  phone   Int   
  name    String?
  address Address?
  course    Course @relation(fields: [courseId], references: [id])
  courseId  String @db.ObjectId

}

type Address {
  street String
  city   String
  state  String
  zip    String
}